[
  {
    "name": "${name}",
    "image": "827079964324.dkr.ecr.ap-northeast-1.amazonaws.com/rails:latest",
    "cpu": 256,
    "memory": 256,
    "essential": true,
    "portMappings": [
      {
        "name": "http-3000",
        "containerPort": 3000,
        "protocol": "tcp",
        "appProtocol": "http",
        "hostPort": 3000
      }
    ],
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "DB_USERNAME",
        "valueFrom": "/ecs/x/DB_USERNAME"
      },
      {
        "name": "DB_PASSWORD",
        "valueFrom": "/ecs/x/DB_PASSWORD"
      },
      {
        "name": "DB_HOST",
        "valueFrom": "/ecs/x/DB_HOST"
      },
      {
        "name": "SECRET_KEY_BASE",
        "valueFrom": "/ecs/x/SECRET_KEY_BASE"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "rails",
        "awslogs-group": "/ecs/project/dev/web"
      }
    }
  }
]
